{% extends "base.html.twig" %}

{% block body %}
<div class="jumbotron" style="width: 100%;height: 100%;">
    <p class="text">Settings for home page content, site statistics, doctors and patients advertisements.
    <hr class="my-4">
    {{ form_start(form,{'action': 'add_home_page_content'}) }}
    <table class="table">
        <tr>
            <th style="width: 25%;">{{ form_label(form.content_type) }}</th>
            <td style="width: 75%;">
                {{ form_widget(form.content_type) }}
                {{ form_help(form.content_type) }}
                {{ form_errors(form.content_type) }}
            </td>
        </tr>
        <tr>
            <th>{{ form_label(form.content_class) }}</th>
            <td>
                {{ form_widget(form.content_class) }}
                {{ form_help(form.content_class) }}
                {{ form_errors(form.content_class) }}
            </td>
        </tr>
        <tr>
            <th>{{ form_label(form.content_first_title) }}</th>
            <td>
                {{ form_widget(form.content_first_title) }}
                {{ form_help(form.content_first_title) }}
                {{ form_errors(form.content_first_title) }}
            </td>
        </tr>
        <tr>
            <th>{{ form_label(form.content_second_title) }}</th>
            <td>
                {{ form_widget(form.content_second_title) }}
                {{ form_help(form.content_second_title) }}
                {{ form_errors(form.content_second_title) }}
            </td>
        </tr>
        <tr>
            <th>{{ form_label(form.content_text) }}</th>
            <td>
                {{ form_widget(form.content_text) }}
                {{ form_help(form.content_text) }}
                {{ form_errors(form.content_text) }}
            </td>
        </tr>
        <tr>
            <th>{{ form_label(form.content_first_link) }}</th>
            <td>
                {{ form_widget(form.content_first_link) }}
                {{ form_help(form.content_first_link) }}
                {{ form_errors(form.content_first_link) }}
            </td>
        </tr>
        <tr>
            <th>{{ form_label(form.content_second_link) }}</th>
            <td>
                {{ form_widget(form.content_second_link) }}
                {{ form_help(form.content_second_link) }}
                {{ form_errors(form.content_second_link) }}
            </td>
        </tr>
        <tr>
            <th>{{ form_label(form.content_photo) }}</th>
            <td>
                {{ form_widget(form.content_photo) }}
                {{ form_help(form.content_photo) }}
                {{ form_errors(form.content_photo) }}
            </td>
        </tr>
        <tr>
            <td colspan="4">
                <button class="btn btn-primary" type="submit" style="margin-top: 5%;float: right;">Save</button>
            </td>
        </tr>
    </table>
    {{ form_end(form) }}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        headers= {
            'Access-Control-Allow-Origin': '*',
        };
    </script>
{% endblock %}