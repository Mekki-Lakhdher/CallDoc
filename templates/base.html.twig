<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        {#Load bootstrap CDN#}
        <link rel="shortcut icon" href="img/Stethoscope.png" type="image/x-icon">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <link href="css/hover/css/hover.css" rel="stylesheet" media="all">
        <title>{% block title %}CallDoc - Video consultation site{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body class="bg-light">
        {% block body %}

            {% block navBar %}
            {#Navigation bar#}
                <nav class="navbar navbar-expand-md navbar-dark bg-primary">
                    <div class="d-flex w-50 order-0">
                        <a class="navbar-brand" href="{{ path('home') }}">
                            <img src="{{ asset('img/CallDoc.png') }}">
                            <span style="padding-left: 5%;">CallDoc</span>
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse justify-content-center order-2" id="collapsingNavbar">
                        <ul class="navbar-nav">
                            <li class="nav-item active hvr-float hvr-underline-from-center">
                                <a class="nav-link" href="{{ path('home') }}">Home<span class="sr-only">(current)</span></a>
                            </li>

                            {% block doctor %}
                                {% if app.user and ( app.user.role=='ROLE_ADMIN' or app.user.role=='ROLE_PATIENT' ) %}
                                    <li class="nav-item active hvr-float hvr-underline-from-center">
                                        <a class="nav-link" href="{{ path('doctors') }}">Doctors<span class="sr-only">(current)</span></a>
                                    </li>
                                {% endif %}
                            {% endblock %}

                            {% block patient %}
                                {% if app.user and ( app.user.role=='ROLE_ADMIN' or app.user.role=='ROLE_DOCTOR' ) %}
                                    <li class="nav-item active hvr-float hvr-underline-from-center">
                                        <a class="nav-link" href="{{ path('patients') }}">Patients<span class="sr-only">(current)</span></a>
                                    </li>
                                {% endif %}
                            {% endblock %}

                            {% block agenda %}
                                {% if app.user and ( app.user.role=='ROLE_ADMIN' or app.user.role=='ROLE_DOCTOR' ) %}
                                    <li class="nav-item active hvr-float hvr-underline-from-center">
                                        <a class="nav-link" href="{{ path('doctor_agenda') }}">Agenda<span class="sr-only">(current)</span></a>
                                    </li>
                                {% endif %}

                                {% if app.user and ( app.user.role=='ROLE_ADMIN' or app.user.role=='ROLE_PATIENT' ) %}
                                    <li class="nav-item active hvr-float hvr-underline-from-center">
                                        <a class="nav-link" href="{{ path('patient_agenda') }}">Agenda<span class="sr-only">(current)</span></a>
                                    </li>
                                {% endif %}
                            {% endblock %}
                        </ul>
                    </div>


                    <span class="navbar-text medium text-truncate mt-1 w-50 text-right order-1 order-md-last">
                        <form class=" my-2 my-lg-0" style="color: white;">
                        {% if not app.user %}
                            <span>Navigate in the site ?</span>
                            <a class="link" style="color: white;padding-left: 2.5%;padding-right: 2.5%;" href="{{ path('app_register') }}">Sign up</a>
                            <a class="link" style="color: white;padding-left: 2.5%;padding-right: 2.5%;" href="{{ path('app_login') }}">Sign in</a>
                        {% else %}
                            <span>Comeback soon, <a style="color: white;" class="link" href="{{ path('profile') }}">{{ app.user.getFirstName() }}<span class="sr-only">(current)</span></a> ?</span>
                            <a class="link" style="color: white;padding-left: 2.5%;padding-right: 2.5%;" href="{{ path('app_logout') }}">Sign out</a>
                        {% endif %}
                    </form>
                    </span>
                </nav>
            {% endblock %}

            {% block sitePresentation %}
            {#Site presentation#}
            <div class="jumbotron bg-light">
                <h1 class="display-4">Hello, world!</h1>
                <p class="lead">This is the CallDoc web video consultaion site.</p>
                <hr class="my-4">
                <p>Make it quicker, simpler and fancier !</p>
                <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
            </div>
            {% endblock %}

        {% endblock %}

        {#Load Javascript & JQuery CDNs#}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
            <script>
                $(document).ready(function () {
                    bsCustomFileInput.init()
                })
            </script>
        {% endblock %}
    </body>
</html>
