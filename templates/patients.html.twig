{% extends "base.html.twig" %}

{% block title %}Patients{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block body %}
    {% block navBar %}
        {{ parent() }}
    {% endblock %}
    <div class="jumbotron bg-light">

        {{ knp_pagination_render(patients) }}

        <table class="table table-active table-sm">
            <thead>
            <tr class="table-dark">
                <th scope="col">Patient</th>
                <th scope="col">Phone number</th>
                <th scope="col">E-mail</th>
                <th scope="col">Consultations</th>
            </tr>
            </thead>
            <tbody>

            {% for patient in patients %}
                <tr>
                    <td scope="row">{{ patient.first_name }} {{ patient.last_name }}</td>
                    <td>{{ patient.phone_number }}</td>
                    <td>{{ patient.email }}</td>
                    <td>
                        {% if patient.consultation_id %}
                            {% if patient.confirmed %}
                                <button style="background-color: Transparent; border: none;" type="button" onclick="viewPendingConsultation('{{ patient.consultation_id }}');" class="btn btn-primary" data-toggle="modal" data-target="#consultationConfirmationModal">
                                    <img src="{{ asset('img/ConfirmedConsultation.png') }}"> <b style="color: #85e085;-webkit-text-stroke-width: 0.5px;-webkit-text-stroke-color: black;">Confirmed</b>
                                </button>
                            {% elseif patient.canceled %}
                                <button style="background-color: Transparent; border: none;" type="button" onclick="viewPendingConsultation('{{ patient.consultation_id }}');" class="btn btn-primary" data-toggle="modal" data-target="#consultationConfirmationModal">
                                    <img src="{{ asset('img/CanceledConsultation.png') }}"> <b style="color: #ff8566;-webkit-text-stroke-width: 0.5px;-webkit-text-stroke-color: black;">Canceled</b>
                                </button>
                            {% else %}
                                <button style="background-color: Transparent; border: none;" type="button" onclick="viewPendingConsultation('{{ patient.consultation_id }}');" class="btn btn-primary" data-toggle="modal" data-target="#consultationConfirmationModal">
                                    <img src="{{ asset('img/PendingConsultation.png') }}"> <b style="color: #ffd480;-webkit-text-stroke-width: 0.5px;-webkit-text-stroke-color: black;">Pending</b>
                                </button>
                            {% endif %}
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>

        <!-- Modal -->
        <div class="modal fade" id="consultationConfirmationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="consultationConfirmationModalTitle"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="d-flex justify-content-center">
                            <div class="spinner-border" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        viewPendingConsultation = function (consultation_id) {
            var url="/confirm_consultation/"+consultation_id;
            $.ajax({
                type: 'post',
                url: url,
                success: function (data) {
                    $('.modal-title').html("Pending consultation");
                    $('.modal-body').html(data);
                    $('#consultationConfirmationModal').modal("show");
                }
            });
        }
    </script>

{% endblock %}