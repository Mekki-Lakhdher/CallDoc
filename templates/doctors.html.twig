{% extends "base.html.twig" %}

{% block title %}Doctors{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block body %}
    {% block navBar %}
        {{ parent() }}
    {% endblock %}

    <!-- Search form -->
    <div class="jumbotron bg-light" style="height:100%;">
        <div class="d-flex justify-content-center">
            <form>
                <div class="form-row align-items-center">

                    <div class="col-auto">
                        <label class="sr-only" for="inlineFormInputGroup">Doctor's name</label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z"/>
                                        <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"/>
                                    </svg>
                                </div>
                            </div>
                            <input type="text" class="form-control col-xs-4" id="inlineFormInputGroup" placeholder="Username">
                        </div>
                    </div>
                    <div class="col-auto">
                        <label class="sr-only" for="inlineFormInputGroup">Speciality</label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z"/>
                                        <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"/>
                                    </svg>
                                </div>
                            </div>
                            <input type="text" class="form-control col-xs-4" id="inlineFormInputGroup" placeholder="Speciality">
                        </div>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary mb-2">Submit</button>
                    </div>
                </div>
            </form>
        </div>


        <div class="d-flex justify-content-center">
            {{ knp_pagination_render(doctors) }}
        </div>

        <table class="table table-active table-sm">
            <thead>
            <tr class="table-dark">
                <th scope="col">Doctor</th>
                <th scope="col">Speciality</th>
                <th scope="col">Phone number</th>
                <th scope="col">E-mail</th>
                <th scope="col">Ask for a consultation</th>
            </tr>
            </thead>
            <tbody>

            {% for doctor in doctors %}
                <tr>
                    <td scope="row">{{ doctor.getFirstName|e }} {{ doctor.getLastName|e }}</td>
                    <td>{{ doctor.getSpeciality|e }}</td>
                    <td>{{ doctor.getPhoneNumber|e }}</td>
                    <td>{{ doctor.getEmail|e }}</td>
                    <td>
                        <button style="background-color: Transparent; border: none;" type="button" onclick="viewDoctorSchedule({{ doctor.getId|e }},'{{ doctor.getFirstName|e }}','{{ doctor.getLastName|e }}');" class="btn btn-primary" data-toggle="modal" data-target="#doctorSceduleModal">
                            <img src="{{ asset('img/AskForConsultation.png') }}">
                        </button>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>

        <!-- Modal -->
        <div class="modal fade" id="doctorSceduleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="doctorSceduleModalTitle"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="d-flex justify-content-center">
                            <div class="spinner-border" role="status">
                                <span class="sr-only">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        {% block javascripts %}

        {% block javascript_cdns %}
            {{ parent() }}
        {% endblock %}

        <script src="{{ asset('js/doctors.js') }}"></script>

        {% endblock %}

    </div>
{% endblock %}