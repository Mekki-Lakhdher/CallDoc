{% extends "base.html.twig" %}

{% block title %}Doctors{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block body %}
    {% block navBar %}
        {{ parent() }}
    {% endblock %}

    <div class="jumbotron bg-light">

        {{ knp_pagination_render(doctors) }}

        <table class="table table-active table-sm">
            <thead>
            <tr class="table-dark">
                <th scope="col">Doctor</th>
                <th scope="col">Speciality</th>
                <th scope="col">Phone number</th>
                <th scope="col">E-mail</th>
                <th scope="col">Schedule</th>
            </tr>
            </thead>
            <tbody>

            {% for doctor in doctors %}
            <tr>
                <td scope="row">{{ doctor.getFirstName|e }} {{ doctor.getLastName|e }}</td>
                <td>{{ doctor.getSpeciality|e }}</td>
                <td>{{ doctor.getPhoneNumber|e }}</td>
                <td>{{ doctor.getEmail|e }}</td>
                <td>
                    <button type="button" onclick="showSchedule({{ doctor.getId|e }},'{{ doctor.getFirstName|e }}','{{ doctor.getLastName|e }}');" class="btn btn-primary" data-toggle="modal" data-target="#doctorSceduleModal">
                        Schedule
                    </button>
                </td>
            </tr>
            {% endfor %}

            </tbody>
        </table>

        <!-- Modal -->
        <div class="modal fade" id="doctorSceduleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="doctorSceduleModalTitle"></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript">

            function showSchedule(doctor_id,doctor_first_name,doctor_last_name) {

                {#var url = '{{ path('doctor_schedule', {doctor_id: 10}) }}';#}
                var url="/doctor_schedule/"+doctor_id;
                $.ajax({
                    type: 'post',
                    url: url,
                    success: function (data) {
                        //alert(data);
                        $('.modal-title').html("Schedule of doctor "+doctor_first_name+" "+doctor_last_name);
                        $('.modal-body').html(data);
                        $('#doctorSceduleModal').modal("show");
                    }
                });
            }

        </script>

    </div>
{% endblock %}